<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Momo Shop - Home</title>
    <link rel="stylesheet" href="/css/style.css">
      <!-- Toastr CSS -->
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" rel="stylesheet">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
      <script src="/js/script.js" defer></script>
</head>

<body>

    <%- include('partials/header') %>

    <!-- My Orders Section -->

    <div id="mouth-watering" class="menu-section">
        <h2>My Orders</h2>
    
        <% if (orders.length === 0) { %>
            <p>No orders yet. Add some items to your order!</p>
        <% } else { %>
            <div class="menu-grid" id="menuGrid">
                <% orders.forEach((order) => { %>
                    <div class="menu-item" data-name="<%= order.name.toLowerCase() %>">
                        <img src="<%= order.image_url %>" alt="<%= order.name %>">
                        <h3><%= order.name %></h3>
                        <p><%= order.description %></p>
                        <div class="price">$<%= order.price %></div>
    
                        <form action="/remove-from-order" method="POST">
                            <input type="hidden" name="momoId" value="<%= order.momo_id %>">
                            <input type="hidden" name="redirectUrl" value="<%= requestUrl %>">
                            <button type="submit" class="add-to-order">Remove from Order</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
    
    <%- include('partials/footer') %>

</body>

</html>
