<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Momo Shop - Admin Panel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">


    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEJwDDRrq0n6cF8dO6Zz8vCkZpum8fD5K1gkPq7YfP5v0dJb7f5I2Z9lwUglr" crossorigin="anonymous">
    <script src="/js/script.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  
   
</head>

<body>

  
    <%- include('partials/header') %>

    <!-- Admin Panel Section -->
    <div class="admin-section">
        <div class="admin-table-container">
            <!-- Add New Item Button -->
            <a href="/admin/momo" class="btn-primary mb-3 add-new-btn">Add Momo</a>

            <!-- Momo List Caption -->
            <h3>Momo List</h3>

            <!-- Table for displaying food items -->
            <div style="overflow-x:auto;">
                <table class="table table-bordered admin-table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th colspan="2" scope="col">Item</th>
                            <th scope="col">Price</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Loop to render food items dynamically -->
                        <% foods.forEach((food, index) => { %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><img src="<%= food.image_url %>" alt="<%= food.name %>"></td>
                                <td><%= food.name %></td>
                                <td>$<%= food.price %></td>
                                <td>
                                    <!-- Edit Button -->
                                    <a href="/admin/update/<%= food.id %>" class="btn btn-sm btn-info" style="font-size: 12px;">Edit</a>
                                    <!-- Delete Button -->
                                    <form method="POST" action="/admin/delete/<%= food.id %>" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>


    <script>
        function toggleMenu() {
            const navLinks = document.querySelector('.nav-links');
            navLinks.classList.toggle('open');
        }
    </script>


</body>

</html>
